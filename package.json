{
    "name": "cpplint",
    "displayName": "cpplint",
    "description": "code style check tool extension for cpplint",
    "version": "0.0.1",
    "publisher": "mine",
    "engines": {
        "vscode": "^1.11.0"
    },
    "categories": [
        "Linters"
    ],
    "activationEvents": [
        "onLanguage:cpp"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [{
            "command": "cpplint.runAnalysis",
            "title": "Analyze current file",
            "category": "cpplinter"
        }],
         "configuration": {
            "type": "object",
            "title": "cpplint",
            "properties": {
                "cpplint.cpplintPath": {
                    "type": "string",
                    "default": "/usr/local/bin/cpplint",
                    "description": "The path to the cpplint executable. If not set, the default location will be used."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}